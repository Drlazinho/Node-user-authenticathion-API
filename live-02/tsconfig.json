/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compilerOptions": {
    "target": "es2019",                                
    "module": "commonjs",
    "moduleResolution": "node", 
    "rootDir": "src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],     
    "outDir": "./dist", //pra onde o código vai quando transpilado 
    "removeComments": true,                       
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,                              
    "strict": true,                       
    "skipLibCheck": true  //caso a bibliotecas não estejam em TS, evitando problemas
  }                              
}
